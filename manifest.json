{
    "name": "Web Quake",
    "description": "Quake by id Software packaged for Chrome OS",
    "version": "0.0.8",
    "manifest_version": 2,
    "offline_enabled": true,
    "permissions": [
        {"fileSystem":["write"]},
        {"socket":[
            "tcp-connect",
            "udp-bind::",
            "tcp-listen::",
            "udp-send-to::"
        ]},
	"pointerLock",
        "storage",
        "http://*/",
        "https://*/"
    ],
    "app": {
        "background": {
            "scripts": ["background.js"]
        }
    },
    "icons": { 
        "16": "earthquake-icone-4663-16.png", 
        "32": "earthquake-icone-4663-32.png", 
        "48": "earthquake-icone-4663-48.png", 
        "64": "earthquake-icone-4663-64.png",
        "96": "earthquake-icone-4663-96.png",
        "128": "earthquake-icone-4663-128.png"
    }
}
